<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
	<type-extension type-id="SitePreferences">
		<custom-attribute-definitions>
			<attribute-definition attribute-id="altaPayTerminals">
				<display-name xml:lang="x-default">AltaPay terminals</display-name>
				<description xml:lang="x-default">Terminals to be used for authorization/capture requests.</description>
				<type>text</type>
				<mandatory-flag>false</mandatory-flag>
			</attribute-definition>
			<attribute-definition attribute-id="altaPayPaymentPagePipeline">
				<display-name xml:lang="x-default">AltaPay payment page URL</display-name>
				<description xml:lang="x-default">Demandware payment page URL AltaPay should merge payment form into.</description>
				<type>string</type>
				<mandatory-flag>false</mandatory-flag>
				<default-value>AltaPay-CallbackForm</default-value>
			</attribute-definition>
			<attribute-definition attribute-id="altaPayPaymentSuccessPipeline">
				<display-name xml:lang="x-default">AltaPay payment success URL</display-name>
				<description xml:lang="x-default">Demandware success/receipt landing page if authorization is successfull.</description>
				<type>string</type>
				<mandatory-flag>false</mandatory-flag>
				<default-value>AltaPay-PaymentSuccess</default-value>
			</attribute-definition>
			<attribute-definition attribute-id="altaPayPaymentFailPipeline">
				<display-name xml:lang="x-default">AltaPay payment fail URL</display-name>
				<description xml:lang="x-default">Demandware fail landing page if authorization is unsuccessfull.</description>
				<type>string</type>
				<mandatory-flag>false</mandatory-flag>
				<default-value>AltaPay-PaymentFail</default-value>
			</attribute-definition>
			<attribute-definition attribute-id="altaPayPaymentOpenPipeline">
				<display-name xml:lang="x-default">AltaPay payment open URL</display-name>
				<description xml:lang="x-default">Demandware success/receipt landing page if authorization is open.</description>
				<type>string</type>
				<mandatory-flag>false</mandatory-flag>
				<default-value>AltaPay-PaymentOpen</default-value>
			</attribute-definition>
			<attribute-definition attribute-id="altaPayPaymentNotificationPipeline">
				<display-name xml:lang="x-default">AltaPay payment notification URL</display-name>
				<description xml:lang="x-default">Demandware notification landing page to update an open order.</description>
				<type>string</type>
				<mandatory-flag>false</mandatory-flag>
				<default-value>AltaPay-PaymentNotification</default-value>
			</attribute-definition>
			<attribute-definition attribute-id="altaPayRedirectPipeline">
				<display-name xml:lang="x-default">AltaPay redirect page URL</display-name>
				<description xml:lang="x-default">Demandware page shown during redirection between customer, webshop and AltaPay.</description>
				<type>string</type>
				<mandatory-flag>false</mandatory-flag>
				<default-value></default-value>
			</attribute-definition>
		</custom-attribute-definitions>
		<group-definitions>
			<attribute-group group-id="AltaPay">
				<display-name xml:lang="x-default">AltaPay</display-name>
				<attribute attribute-id="altaPayTerminals"/>
				<attribute attribute-id="altaPayPaymentPagePipeline"/>
				<attribute attribute-id="altaPayPaymentSuccessPipeline"/>
				<attribute attribute-id="altaPayPaymentFailPipeline"/>
				<attribute attribute-id="altaPayPaymentOpenPipeline"/>
				<attribute attribute-id="altaPayPaymentNotificationPipeline"/>
				<attribute attribute-id="altaPayRedirectPipeline"/>
			</attribute-group>
		</group-definitions>
	</type-extension>
</metadata>
